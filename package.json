{
  "name": "Tilgram-api-server",
  "version": "1.0.0",
  "description": "Tilgram.com api server",
  "main": "src/bin/server.js",
  "repository": "",
  "author": "Tilgram",
  "license": "AGPL",
  "scripts": {
    "start": "cross-env NODE_PATH=src nodemon src/bin/server.js",
    "db:load": "knex seed:run --knexfile src/config/knexfile.js",
    "lint": "standard | snazzy",
    "lint:fix": "standard --fix | snazzy",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "bcrypt": "^1.0.2",
    "cross-env": "^4.0.0",
    "date-fns": "^1.28.3",
    "dotenv": "^4.0.0",
    "http-shutdown": "^1.2.0",
    "humps": "^2.0.0",
    "join-js": "^0.4.1",
    "jsonwebtoken": "^7.4.0",
    "kcors": "next",
    "knex": "^0.12.9",
    "koa": "^2.2.0",
    "koa-bodyparser": "^4.2.0",
    "koa-helmet": "^3.1.0",
    "koa-jwt": "^3.2.1",
    "koa-logger": "^2.0.1",
    "koa-response-time": "^2.0.0",
    "koa-router": "^7.1.1",
    "lodash": "^4.17.4",
    "nodemon": "^1.11.0",
    "pg": "^6.1.5",
    "qs": "^6.4.0",
    "request": "^2.81.0",
    "request-promise": "^4.2.0",
    "slug": "^0.9.1",
    "sqlite3": "^3.1.8",
    "uuid": "^3.0.1",
    "validator": "^7.0.0",
    "yup": "^0.21.3"
  },
  "devDependencies": {
    "faker": "^4.1.0",
    "jest": "^19.0.2",
    "snazzy": "^7.0.0",
    "standard": "^10.0.2"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](docs|node_modules)[/\\\\]"
    ],
    "bail": true,
    "testMatch": [
      "**/__tests__/**/*index.js?(x)",
      "**/?(*.)(spec|test)index.js?(x)"
    ],
    "modulePaths": [
      "src"
    ]
  }
}
